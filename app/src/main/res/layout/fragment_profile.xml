<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="93dp"
            android:layout_height="78dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="142dp"
            android:src="@drawable/adduser" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:textSize="25dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:text="My Tools"/>

                <TextView
                    android:id="@+id/tv_my_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Ads"/>

                <HorizontalScrollView
                    android:id="@+id/v_my_ads"
                    android:layout_width="match_parent"
                    android:layout_height="500px">

                    <LinearLayout
                        android:id="@+id/ll_my_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_rent_requests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rent Requests"/>

                <HorizontalScrollView
                    android:id="@+id/v_rent_requests"
                    android:layout_width="match_parent"
                    android:layout_height="500px">

                    <LinearLayout
                        android:id="@+id/ll_rent_requests"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_my_requests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Requests"/>

                <HorizontalScrollView
                    android:id="@+id/v_my_requests"
                    android:layout_width="match_parent"
                    android:layout_height="500px">

                    <LinearLayout
                        android:id="@+id/ll_my_requests"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>